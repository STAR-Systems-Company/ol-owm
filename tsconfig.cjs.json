{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
